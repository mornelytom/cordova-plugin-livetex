<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:paddingTop="12dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_margin="24dp"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_marginTop="38dp"
            android:layout_marginBottom="48dp"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/new_livetex_logo_white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <nit.livetex.cordovalivetex.view.TextViewRoboto
            style="@style/tv_title_init"
            android:textSize="@dimen/tv_title_size_medium"
            android:text="Приложение для демонстрации"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <nit.livetex.cordovalivetex.view.TextViewRoboto
            style="@style/tv_title_init"
            android:textSize="@dimen/tv_title_size_medium"
            android:text="возможностей LiveTex Mobile SDK"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

        <nit.livetex.cordovalivetex.view.ButtonBlue
            android:layout_margin="40dp"
            style="@style/btn_blue"
            android:textSize="@dimen/tv_title_size_small"
            android:id="@+id/btnOnlineMode"
            android:enabled="false"
            android:text="ЧАТ С ОПЕРАТОРОМ"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

</LinearLayout>